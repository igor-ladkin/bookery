<li class="column is-half">
  <div class="card mb-2">
    <div class="card-content">
      <p class="title mb-3">
        <%= concert.title %>
      </p>

      <%= render partial: "available_ticket",
                 collection: concert.available_ticket_types,
                 as: "ticket" %>

      <p class="subtitle mt-3">
        <%= concert.starts_at.to_formatted_s :long_ordinal %>
      </p>
    </div>

    <footer class="card-footer">
      <p class="card-footer-item">
        <%= link_to "Book", "#", class: "button is-primary is-light is-outlined is-medium is-fullwidth is-rounded" %>
      </p>
    </footer>
  </div>
</li>
